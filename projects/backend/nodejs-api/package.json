{
  "name": "devsecops-nodejs-demo",
  "version": "1.0.0",
  "description": "DevSecOps Portfolio - Node.js API Demo with Security Hardening",
  "main": "server.js",
  "author": "msrj-xyz <msrj.xyz@gmail.com>",
  "license": "MIT",
  "keywords": ["devsecops", "nodejs", "express", "api", "security", "ci-cd"],
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "lint": "eslint *.js --fix",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm audit fix",
    "docker:build": "docker build -t devsecops-nodejs-api .",
    "docker:run": "docker run -p 3000:3000 devsecops-nodejs-api"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "csurf": "^1.11.0",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.46.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.js",
      "!coverage/**",
      "!node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}