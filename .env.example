# DevSecOps Portfolio - Environment Variables Template
# Copy this file to .env and configure your specific values
# NEVER commit .env files to version control

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=postgresql://username:password@localhost:5432/devsecops_db
DATABASE_SSL=true
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ==============================================
# AUTHENTICATION & JWT
# ==============================================
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d
BCRYPT_ROUNDS=12

# ==============================================
# API KEYS & EXTERNAL SERVICES
# ==============================================
GITHUB_TOKEN=ghp_your_github_personal_access_token
SNYK_TOKEN=your_snyk_api_token
SONARQUBE_TOKEN=your_sonarqube_token
OPENAI_API_KEY=sk-your_openai_api_key

# ==============================================
# CLOUD PROVIDER CREDENTIALS
# ==============================================

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_ACCOUNT_ID=123456789012

# Azure Configuration
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret  
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
GOOGLE_PROJECT_ID=your_gcp_project_id

# ==============================================
# KUBERNETES CONFIGURATION
# ==============================================
KUBECONFIG=/path/to/your/kubeconfig
KUBECTL_CONTEXT=your_kubernetes_context
NAMESPACE=default

# ==============================================
# MONITORING & OBSERVABILITY
# ==============================================
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key

# ELK Stack
ELASTICSEARCH_URL=http://localhost:9200
KIBANA_URL=http://localhost:5601
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5044

# ==============================================
# NOTIFICATION SERVICES
# ==============================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#devsecops-alerts
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
EMAIL_FROM=noreply@yourcompany.com

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_IV=your_16_character_iv_here

# Security Headers
CORS_ORIGIN=http://localhost:3000,https://yourapp.com
ALLOWED_HOSTS=localhost,yourapp.com
TRUSTED_PROXIES=127.0.0.1,10.0.0.0/8

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# DEVELOPMENT & TESTING
# ==============================================
DEBUG=true
LOG_LEVEL=debug
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/devsecops_test_db

# Browser Testing
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30000

# ==============================================
# CI/CD CONFIGURATION
# ==============================================
CI=true
BUILD_NUMBER=local
GIT_COMMIT=local-development
GIT_BRANCH=main

# Container Registry
CONTAINER_REGISTRY=ghcr.io/msrj-xyz/devsecops
IMAGE_TAG=latest

# ==============================================
# COMPLIANCE & GOVERNANCE
# ==============================================
COMPLIANCE_FRAMEWORK=SOC2
DATA_CLASSIFICATION=internal
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
BACKUP_RETENTION_DAYS=90

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_API_DOCS=true
ENABLE_METRICS=true
ENABLE_PROFILING=false
ENABLE_DEBUG_ROUTES=false
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_HELMET=true

# ==============================================
# TERRAFORM BACKEND (if using remote state)
# ==============================================
TF_VAR_terraform_state_bucket=your-terraform-state-bucket
TF_VAR_terraform_lock_table=your-terraform-lock-table
TF_VAR_aws_region=us-west-2
TF_VAR_environment=development

# ==============================================
# MISCELLANEOUS
# ==============================================
TIMEZONE=UTC
DEFAULT_LOCALE=en-US
MAX_FILE_SIZE=10485760  # 10MB in bytes
SESSION_SECRET=your_session_secret_change_this
COOKIE_SECURE=false  # Set to true in production with HTTPS

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000