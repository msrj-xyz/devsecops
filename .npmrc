# NPM Configuration for DevSecOps Portfolio
# Optimize for CI/CD environments

# Use npm ci for clean installs in CI
# package-lock.json must be present
fund=false
audit-level=moderate
save-exact=true

# Security configurations
audit=true
security=true

# Registry configuration (use default npm registry)
registry=https://registry.npmjs.org/

# Cache configuration for CI optimization
cache-min=86400

# Progress configuration for CI environments
progress=false
loglevel=warn

# Install configuration
prefer-offline=true
shrinkwrap=true

# Optional: Engine strict mode (uncomment if needed)
# engine-strict=true